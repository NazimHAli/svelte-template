{
    "name": "svelte-app",
    "version": "1.0.0",
    "license": "MIT",
    "scripts": {
        "build": "yarn lint && cross-env NODE_ENV=production webpack",
        "cy:open": "cypress open",
        "cy:run": "cypress run --headless -s",
        "dev": "webpack serve",
        "lint": "prettier --check .",
        "lint:fix": "prettier --check -w .",
        "lint:watch": "onchange '**' --exclude-path .gitignore -- prettier --write {{changed}}",
        "start": "cross-env NODE_ENV=production node app.js",
        "test": "cypress run",
        "test:start": "yarn start & wait-on -t 3000 'http://localhost:8080/'"
    },
    "devDependencies": {
        "@babel/core": "^7.16.0",
        "@fullhuman/postcss-purgecss": "^4.0.3",
        "@tailwindcss/typography": "^0.4.1",
        "@tsconfig/svelte": "^2.0.1",
        "animate.css": "^4.1.0",
        "autoprefixer": "^10.4.0",
        "babel-loader": "^8.2.3",
        "cross-env": "^7.0.2",
        "css-loader": "^6.5.1",
        "cssnano": "^5.0.10",
        "cypress": "^8.7.0",
        "file-loader": "^6.0.0",
        "glob": "^7.2.0",
        "html-webpack-plugin": "^5.5.0",
        "mini-css-extract-plugin": "^2.4.4",
        "onchange": "^7.0.2",
        "postcss": "^8.3.11",
        "postcss-import": "^14.0.2",
        "postcss-load-config": "^3.0.1",
        "postcss-loader": "^6.2.0",
        "prettier": "^2.0.5",
        "prettier-plugin-svelte": "^2.4.0",
        "sass": "^1.43.4",
        "sass-loader": "^12.3.0",
        "sharp": "^0.29.2",
        "style-loader": "^3.3.1",
        "svelte": "^3.44.1",
        "svelte-check": "^2.2.8",
        "svelte-loader": "3.1.2",
        "svelte-preprocess": "^4.9.8",
        "tailwindcss": "^2.2.19",
        "ts-loader": "^9.2.6",
        "typescript": "^4.4.4",
        "wait-on": "^6.0.0",
        "webpack": "^5.62.1",
        "webpack-cli": "^4.9.1",
        "webpack-dev-server": "^4.4.0"
    },
    "dependencies": {
        "compression": "^1.7.4",
        "express": "^4.17.1"
    }
}
